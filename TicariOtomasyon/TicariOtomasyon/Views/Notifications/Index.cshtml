@model IEnumerable<TicariOtomasyon.Models.Siniflar.Notification>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h2>Bildirimler</h2>

<table class="table">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Tarih</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@(item.IsApproved ? "Onaylandı" : "Beklemede")</td>
                <td>
                    <a href="@Url.Action("Approve", "Notifications", new { id = item.NotificationID })" class="btn btn-success">Onayla</a>
                    <a href="@Url.Action("Reject", "Notifications", new { id = item.NotificationID })" class="btn btn-danger">Reddet</a>
                </td>
            </tr>
        }
    </tbody>
</table>
