@using TicariOtomasyon.Models.Siniflar
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table id="tbl2" class="table table-bordered" style="margin-top:20px;">
    <thead>
        <tr>
            <th>ID</th>
            <th>Product Name</th>
            <th>Product Brand</th>
            <th>Product Stock</th>
            <th>Product Cost</th>
            <th>Product Price</th>
            <th>Product Image</th>
            <th>Product Category</th>
            <th>Delete &amp; Update</th>
            <th>New Sale</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.ProductID
                </td>
                <td>
                    @item.ProductName
                </td>
                <td>
                    @item.ProductBrand
                </td>
                <td>
                    @item.ProductStock
                </td>
                <td>
                    @item.ProductCost
                </td>
                <td>
                    @item.ProductPrice
                </td>
                <td>
                    @item.ProductImage
                </td>

                <td>
                    @item.Category.CategoryName
                </td>
                <td>
                    <a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-danger">Delete</a>
                    <h1> </h1>
                    <a href="/Product/GetProduct/@item.ProductID" class="btn btn-primary">Update</a>
                    
                </td>
                <td><a href="/Product/NewSale/@item.ProductID" class="btn btn-success">Sale</a></td>

            </tr>
        }
    </tbody>

</table>
<a class="btn btn-primary" href="/Product/NewProduct">New Product</a>
<link href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css" rel="stylesheet" />

<!-- DataTables JS ve jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>



<script>

    $('#tbl2').dataTable({});

</script>