@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <link href="/web2/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <script src="/web2/js/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMrcboZsmuXSTf9kIUU7IVa59UIK3OVwvNHfl+2" crossorigin="anonymous">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/web2/js/zingchart.min.js"></script>
    <script src="/web2/js/zingchart.jquery.js"></script>
    <script src="/web2/js/jquery.easydropdown.js"></script>
    <script src="/web2/js/jquery.nicescroll.js"></script>
    <link href="/web2/css/jqvmap.css" media="screen" rel="stylesheet" type="text/css" />
    <script src="/web2/js/easyResponsiveTabs.js" type="text/javascript"></script>
    <link href="/web2/css/nav.css" rel="stylesheet" type="text/css" media="all" />
    <script src="/web2/js/main.js"></script>
    <script src="/web2/js/Chart1.js"></script>
</head>
<body>
    <div class="total-content">
        <div class="list_of_members">
            <div class="sales" style="background-color:#1abc9c">
                
                <div class="icon-text">
                    <h3>@ViewBag.TotalCount</h3>
                    <p>Total Customer</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="new-users" style="background-color:#2ecc71">
                
                <div class="icon-text">
                    <h3>@ViewBag.TotalProducts</h3>
                    <p>Products</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="orders" style="background-color:#3498db">
               
                <div class="icon-text">
                    <h3>@ViewBag.TotalEmployees</h3>
                    <p>Employees</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="visitors" style="background-color:#9b59b6">
               
                <div class="icon-text">
                    <h3>@ViewBag.TotalCategories</h3>
                    <p>Categories</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="total-content">
        <div class="list_of_members">
            <div class="sales" style="background-color:#16a085">
                
                <div class="icon-text">
                    <h3>@ViewBag.TotalStocks</h3>
                    <p>Total Product Stock</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="new-users" style="background-color:#27ae60">
                
                <div class="icon-text">
                    <h3>@ViewBag.TotalBrands</h3>
                    <p>Brands</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="sales" style="background-color:#f39c12;color:white">
               
                <div class="icon-text">
                    <h2>@ViewBag.BestSeller</h2>
                    <p>Best Sellers</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="visitors" style="background-color:#8e44ad">
                
                <div class="icon-text">
                    <h3>@ViewBag.Expensive</h3>
                    <p>Most Expensive</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <div class="clearfix"></div>
</body>
</html>
